					"navigation": {
						"next": "add_devices"
				},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Monitor settings",
						"nl": "Meter instellingen"
					},
					"children": [
						{
							"id": "lat",
							"type": "number",
							"label": {
								"en": "Latitude",
								"nl": "Breedtegraad"
							},
							"hint": {
								"en": "The latitude of the monitor.",
								"nl": "De breedtegraad van de monitor."
							  },
							"value": 52.228936
						},
						{
							"id": "lon",
							"type": "number",
							"label": {
								"en": "Longitude",
								"nl": "Lengtegraad"
							},
							"hint": {
								"en": "The longitude of the monitor.",
								"nl": "De lengtegraad van de monitor."
							  },
							"value": 5.321492
						},
						{
							"id": "dst",
							"type": "number",
							"label": {
								"en": "Max. range (km)",
								"nl": "Max. afstand (km)"
							},
							"hint": {
								"en": "The maximum distance used to find online data.",
								"nl": "De maximale afstand om online gegevens te vinden."
							},
							"attr": { "min": 1, "max": 100 },
							"value": 20
						},
						{
							"id": "pollingInterval",
							"type": "number",
							"label": {
								"en": "Scan interval (minutes)",
								"nl": "Scan interval (minuten)"
							},
							"attr": { "min": 5 },
							"value": 15
						}
					]
				}
			]
		}
